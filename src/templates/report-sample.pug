doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title #{title}
    link(href="http://localhost:3000/css/style.css" ,rel="stylesheet", type="text/css")
    style.
      @import url('https://fonts.googleapis.com/css2?family=Roboto:wght@300&display=swap');
      @import url('https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap');
      body {
        font-family: Roboto,Arial, Helvetica, sans-serif;
        font-size: 1rem;
        line-height: 1.5;
        font-weight: 500;
      }
      h1 {
        color: #00f;
      }
  body 
    div(class="w-[994px] mx-auto p-8 border border-gray-200")
      h1(class="text-2xl mb-4")
      //- header.class="flex justify-between items-center"
      //-     img(src="path-to-left-logo.jpg" alt="Left Logo").class="w-24 h-24"
      //-     img(src="path-to-right-logo.jpg" alt="Right Logo").class="w-24 h-24"
      div(class="relative flex justify-between items-center")
        //- img(src="path-to-left-logo.jpg" alt="Left Logo" class="w-24 h-24")
        //- img(src="path-to-right-logo.jpg" alt="Right Logo" class="w-24 h-24")
        div(class="")
          img(src="https://enatontech.com/static/logo.svg" alt="Left Logo" class="w-24 h-24")
        div(class="flex-1 text-center flex flex-col justify-center items-center")
          //- School details go here.
          h1(class="text-2xl font-bold uppercase") #{schoolName||'Enaton Student Report Card for '+new Date().getFullYear()}
          p(class="uppercase") #{schoolAddress||'P.O. Box 1234, Nairobi'}
          p(class="") #{schoolMotto||'Education is the key to success'}
        div(class="")
        //-   img(src="https://images.unsplash.com/photo-1671726203454-5d7a5370a9f4?ixlib=rb-4.0.3&ixid=M3wxMjA3fDF8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1470&q=80" alt="Right Logo" class="w-24 h-24")
      div(class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 opacity-50 text-[5rem] -rotate-45 text-gray-200 uppercase font-bold -z-10 text-balance")
        | #{schoolName||'Student Report Card'}
      div(class="mt-8") End of Term #{term||'1'} Report Card for #{studentName||'John Doe'}
      table(class="w-full mt-8 border-collapse border border-red-300")
        thead
          tr(class="border text-gray-700 uppercase text-left")
            th(class="border p-2") Subject
            th(class="border p-2") Marks
            th(class="border p-2") Grade
            th(class="border p-2") Position
            th(class="border p-2") Remarks
            th(class="border p-2") Term
            th(class="border p-2") Year
            th(class="border p-2") Teacher
        tbody
          each subject in subjects
            tr
              td(class="border p-2")= subject.Subject
              td(class="border p-2") #{subject.Marks}
              td(class="border p-2") #{subject.Grade}
              td(class="border p-2") #{subject.Position}
              td(class="border p-2") #{subject.Remarks}
              td(class="border p-2") #{subject.Term}
              td(class="border p-2") #{subject.Year}
              td(class="border p-2") #{subject.Teacher || 'teacher'} 

      // ... Similarly, add rows for other data and the other tables.

      // For the Performance Graph, you'll likely need JavaScript or a specialized library.

      div(class="mt-8 grid grid-cols-2 gap-4")
        div(class="mb-4 h-full w-full border border-gray-200 p-2")
        // Performance graph goes here.
        div(class="flex flex-col")
            div(class="mb-4")
                div(class="mb-2")
                    div(class="flex-1 border border-gray-200 mb-2 p-2")
                        | Class Teacher's Remarks
                        div(class="border-gray-400 mb-2 h-20 w-full flex flex-col justify-end")
                            div(class="w-full h-full outline-none focus:ring-0" )
                            div(class=" border-gray-400 mb-2")
                                p(class="flex justify-between") 
                                        span() Sign: ____________________ 
                                        span() Date: ____________________
                    
                    div(class="flex-1 border-gray-200 border mb-2 p-2")
                        | Class Teacher's Remarks
                        div(class="border-gray-400 mb-2 h-20 w-full flex flex-col justify-end")
                            div(class="w-full h-full outline-none focus:ring-0" )
                            div(class=" border-gray-400 mb-2")
                                p(class="flex justify-between") 
                                        span() Sign: ____________________ 
                                        span() Date: ____________________
                
                            
            

      table(class="w-full mt-8 border-collapse border")
        thead
          tr
            th(class="border px-2") School fee balance
            th(class="border px-2") Transport fee balance
            th(class="border px-2") Next term fee balance
        // Add rows for the above table as per your data structure.
        tbody
          tr
            td(class="border px-2") #{fees.schoolFeeBalance}
            td(class="border px-2") #{fees.transportFeeBalance}
            td(class="border px-2") #{fees.nextTermFeeBalance}